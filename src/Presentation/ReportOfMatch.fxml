<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Presentation.ReportOfMatchController">
   <children>
      <BorderPane prefHeight="600.0" prefWidth="850.0">
         <top>
            <GridPane BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="279.0" minWidth="10.0" prefWidth="248.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="341.0" minWidth="10.0" prefWidth="341.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="280.0" minWidth="10.0" prefWidth="230.0" />
              </columnConstraints>
              <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label prefHeight="30.0" prefWidth="195.0" text="Choose Match" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets left="30.0" />
                     </GridPane.margin>
                     <padding>
                        <Insets left="40.0" />
                     </padding>
                  </Label>
                  <ComboBox fx:id="idMatches" onMouseClicked="#chooseMatchBtn" prefHeight="31.0" prefWidth="325.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <Button fx:id="runReportBtn" mnemonicParsing="false" onAction="#createReportInline" prefHeight="31.0" prefWidth="175.0" text="Create report" GridPane.columnIndex="2" GridPane.rowIndex="1">
                     <GridPane.margin>
                        <Insets left="50.0" />
                     </GridPane.margin>
                     <padding>
                        <Insets left="5.0" />
                     </padding></Button>
               </children>
            </GridPane>
         </top>
         <center>
            <Pane prefHeight="322.0" prefWidth="560.0" BorderPane.alignment="CENTER">
               <children>
                  <TableView fx:id="reportTable" layoutX="-3.0" prefHeight="322.0" prefWidth="560.0">
                    <columns>
                      <TableColumn fx:id="EventsTable" minWidth="560.0" prefWidth="560.0" style="-fx-alignment: CENTER;" text="Events in match" />
                    </columns>
                  </TableView>
               </children>
               <BorderPane.margin>
                  <Insets left="150.0" />
               </BorderPane.margin>
            </Pane>
         </center>
         <left>
            <GridPane prefHeight="540.0" prefWidth="86.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="264.0" minHeight="10.0" prefHeight="119.0" vgrow="SOMETIMES" />
                <RowConstraints maxHeight="394.0" minHeight="10.0" prefHeight="272.0" vgrow="SOMETIMES" />
                  <RowConstraints maxHeight="394.0" minHeight="10.0" prefHeight="151.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button fx:id="idBack" mnemonicParsing="false" onAction="#BackToReferee" prefHeight="37.0" prefWidth="69.0" text="Back" GridPane.rowIndex="2">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <GridPane.margin>
                        <Insets left="10.0" />
                     </GridPane.margin>
                  </Button>
               </children>
            </GridPane>
         </left>
      </BorderPane>
   </children>
