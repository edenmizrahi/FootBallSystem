<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Presentation.ReportOfMatchController">
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0">
         <top>
            <GridPane BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label prefHeight="45.0" prefWidth="230.0" text="Choose Match">
                     <padding>
                        <Insets left="35.0" />
                     </padding>
                     <GridPane.margin>
                        <Insets left="35.0" />
                     </GridPane.margin>
                  </Label>
                  <ComboBox fx:id="idMatches" onMouseClicked="#chooseMatchBtn" prefWidth="150.0" GridPane.columnIndex="1" />
                  <Button fx:id="runReportBtn" mnemonicParsing="false" onAction="#startCreatReport" prefHeight="45.0" prefWidth="230.0" text="Create report" GridPane.columnIndex="2" />
               </children>
            </GridPane>
         </top>
         <center>
            <TableView prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn fx:id="EventsTable" prefWidth="400.0" text="Events" />
              </columns>
               <padding>
                  <Insets left="50.0" right="50.0" top="20.0" />
               </padding>
               <BorderPane.margin>
                  <Insets left="50.0" right="50.0" top="20.0" />
               </BorderPane.margin>
            </TableView>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
